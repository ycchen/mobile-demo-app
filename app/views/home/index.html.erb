<div data-role="header" data-position="fixed">
	<h1>Demo App</h1>
	<div data-role="navbar">
		<ul>
			<li><a href="<%= root_path %>" data-icon="home" data-no-turbolink='true' class="<%= 'ui-btn-active' if controller_name == 'home' %>">Home</a></li>
			<li><a href="#" data-icon="search">Search</a></li>
			<li><a href="<%= notes_path %>" data-icon="star" data-no-turbolink='true' class="<%= 'ui-btn-active' if controller_name == 'notes' %>">Notes</a></li>
			<li><a href="<%= root_url %>" data-icon="refresh">Refresh</a></li>
		</ul>
	</div>
</div><!-- /header -->

<div data-role="content">
	<p>View internal page called <a href="#bar">bar</a></p>
	<form action="#" method="get">
		<span class="ui-btn ui-icon-plus ui-btn-icon-left ui-corner-all fileinput-button">
		    <span>Upload Image</span>
		    <input type="file" name="files[]" multiple data-role="none"/>
		</span>

		<div data-role="fieldcontainer">
			<label for="qty">Slide Me Bro</label>
			<input type="range" id="qty" name="qty" min="1" max="100" value="5">
		</div>
		<label for="submit-6">Send:</label>
		<button type="submit" id="submit-6" class="ui-shadow ui-btn ui-corner-all ui-mini">Submit</button>
	</form>
</div>